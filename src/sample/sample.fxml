      <Label fx:id="lAzul" text="Label" GridPane.columnIndex="1" />
      <Label fx:id="lRojo" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <Label fx:id="lAmarillo" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="2" />
