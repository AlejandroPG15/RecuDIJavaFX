   <children>
      <Button fx:id="bAzul" mnemonicParsing="false" onMouseClicked="#ratonClick" onMouseEntered="#ratonEncimaAz" onMouseExited="#ratonFueraAz" prefHeight="26.0" prefWidth="100.0" text="AZUL" />
